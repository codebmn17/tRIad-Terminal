# Triad Terminal Configuration
# Multi-Assistant Command Center Settings

# Database Settings
TRIAD_DB_PATH=~/.triad/history.db
DATASET_CATALOG_PATH=~/.triad/datasets
SQLITE_ECHO=false

# Storm Integration Settings  
STORM_WEBSOCKET_PORT=8765
STORM_COORDINATION_TIMEOUT=30.0
STORM_REDIS_URL=redis://localhost:6379/0

# Multi-Assistant Settings
MAX_ACTIVE_SESSIONS=10
SESSION_TIMEOUT_MINUTES=120
DEFAULT_ASSISTANT_TYPES=PlannerAgent,ExecutorAgent,ChatAgent

# API Settings
API_HOST=127.0.0.1
API_PORT=8000
API_DEBUG=true
CORS_ORIGINS=*

# History Persistence Settings
HISTORY_RETENTION_DAYS=30
AUTO_CLEANUP_ENABLED=true
MAX_MESSAGES_PER_ROOM=10000

# Dataset Catalog Settings
MAX_DATASET_SIZE_MB=100
SUPPORTED_FORMATS=csv,json,parquet,txt,tsv,excel
AUTO_SCHEMA_ANALYSIS=true

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=~/.triad/logs/triad.log

# Security Settings (for production)
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1
ENABLE_API_AUTH=false

# Performance Settings
WORKER_THREADS=4
CONNECTION_POOL_SIZE=20
REQUEST_TIMEOUT_SECONDS=30

# Feature Flags
ENABLE_STORM_INTEGRATION=true
ENABLE_DATASET_CATALOG=true
ENABLE_HISTORY_PERSISTENCE=true
ENABLE_MULTI_ASSISTANT=true
ENABLE_GROUP_CHAT=true